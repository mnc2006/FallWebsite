<% @posts.each do |post| %>
  <div class="post-preview">
    <a href="<%post_path(:id => post.id) %>">
      <h2 class="post_title">
        <%post.title %>
      </h2>
      <h3 class="post_subtitle">
        <%=post.summary %>
      </h3>
    </a>
    <p class="post-meta">Posted by <a href="#"><%= p.author %></a> on <%= p.created_at %></p>
    </div>
    <hr>
  <% end %>
    
